<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardElevation="16dp"
    app:cardCornerRadius="20dp"
    android:layout_height="370dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/gradient_btn"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:fontFamily="@font/custom_font"
            android:gravity="center"
            android:text="Chat Request"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_above="@id/ll2"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_help_active" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll2"
            android:layout_marginBottom="100dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/border4"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="From" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/border3"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:text="Saurabh Kumar"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/border4"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Message" />

            <TextView
                android:id="@+id/et_displayMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/border3"
                android:maxLength="100"
                android:padding="8dp"
                android:paddingStart="8dp"
                android:text="Hey I need Rabina finding someone to have chat with me ðŸ˜Š"
                android:textColor="@color/white"
                android:textStyle="normal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:id="@+id/ll"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_marginEnd="8dp"
                android:layout_height="50dp"
                app:cardElevation="0dp"
                android:layout_gravity="center"
                app:cardCornerRadius="100dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_btn">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:text="Accept"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="italic">

                    </TextView>

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ic_arrow"
                        android:background="@drawable/white_circulatr_back"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="2dp" />

                    <FrameLayout
                        android:id="@+id/help_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </FrameLayout>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:elevation="8dp"
                android:layout_marginStart="8dp"
                android:layout_height="50dp"
                app:cardElevation="0dp"
                android:layout_gravity="center"
                app:cardCornerRadius="100dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_btn">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:text="Ignore"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="italic">

                    </TextView>

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ignore_ic"
                        android:background="@drawable/white_circulatr_back"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="2dp" />


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:id="@+id/ignore_request"
                        android:layout_height="match_parent">

                    </FrameLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:drawableStart="@drawable/ic_bulb"
            android:gravity="center"
            android:text="Accept to chat in private room.\nWe don't store your chat. Your all chat will stored in device ðŸ’›"
            android:textColor="@color/white"
            android:textSize="8dp"
            android:textStyle="italic" />







    </RelativeLayout>

</androidx.cardview.widget.CardView>