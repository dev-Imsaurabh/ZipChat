<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_btn"
    android:fillViewport="true"
    tools:context=".Login.OTP_Verification_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:orientation="vertical"
        tools:ignore="ScrollViewSize">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OTP verification !"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"/>
        <androidx.cardview.widget.CardView
            android:layout_width="500px"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="16dp"
            app:cardElevation="0dp"
            android:layout_height="500px">

            <ImageView
                android:layout_width="500px"
                android:layout_height="500px"
                android:src="@drawable/ot_image"/>

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:padding="8dp"
            android:textSize="18sp"
            android:text="We have sent you OTP on your\nPhone number please enter to proceed !"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_height="wrap_content"
            android:gravity="center">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/intentPhoneNumber"
                android:padding="8dp"
                android:text="+91- 9163637377"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:gravity="start">
            </TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/border3"
                android:id="@+id/input1"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:layout_margin="2dp"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor" />
            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/border3"
                android:id="@+id/input2"
                android:layout_margin="2dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor" />
            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/border3"
                android:id="@+id/input3"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:layout_margin="2dp"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor" />
            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/border3"
                android:gravity="center"
                android:id="@+id/input4"
                android:layout_margin="2dp"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor" />
            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/border3"
                android:layout_margin="2dp"
                android:id="@+id/input5"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor" />
            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@drawable/border3"
                android:id="@+id/input6"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor" />





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:textSize="12sp"
                android:text="Didn't,received OTP?"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_height="wrap_content"
                android:gravity="center">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/resendOtpBtn"
                android:textSize="18sp"
                android:text="Resend OTP"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:layout_height="wrap_content"
                android:gravity="center">
            </TextView>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="42dp"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:id="@+id/proceedBtn"
                android:layout_height="50dp"
              android:layout_gravity="center"
                app:cardElevation="0dp"
                app:cardCornerRadius="100dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_btn">

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/login_info"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:text="Proceed"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="italic">

                    </TextView>

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ic_arrow"
                        android:background="@drawable/white_circulatr_back"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="2dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <ProgressBar
                android:layout_width="35dp"
                android:layout_gravity="center"
                android:layout_height="35dp"
                android:indeterminateTint="#FFC107"
                android:id="@+id/progressBar"
                android:visibility="gone"/>



        </FrameLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/editText"/>






    </LinearLayout>


</ScrollView>