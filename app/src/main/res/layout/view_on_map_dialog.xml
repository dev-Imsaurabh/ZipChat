<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardElevation="16dp"
    app:cardCornerRadius="20dp"
    android:layout_height="360dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="4dp"

        android:background="@drawable/gradient_btn"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"

            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:id="@+id/rece_image"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/profile_icon" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Match Found With"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:layout_gravity="center"
                android:background="@drawable/border4"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/border3"
                android:text="Saurabh Kumar"
                android:textColor="@color/white"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:id="@+id/rece_username"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingStart="8dp"
                android:layout_gravity="center"
                android:paddingEnd="8dp"
                android:background="@drawable/border4"
                android:layout_marginTop="8dp"
                android:text="Message" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:maxLength="100"
                android:id="@+id/et_message"
                android:background="@drawable/border3"
                android:textStyle="normal"
                android:padding="8dp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:text="Hey I am Rabina ! Interested in to chat with you ðŸ˜Š"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:id="@+id/ll"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_marginEnd="8dp"
                android:layout_height="50dp"
                app:cardElevation="0dp"
                android:layout_gravity="center"
                app:cardCornerRadius="100dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_btn">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:id="@+id/accept_btn_txt"
                        android:paddingStart="16dp"
                        android:text="Chat"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="italic">

                    </TextView>

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/app_icon"
                        android:background="@drawable/white_circulatr_back"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="2dp" />

                    <FrameLayout
                        android:id="@+id/view_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </FrameLayout>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:elevation="8dp"
                android:layout_marginStart="8dp"
                android:layout_height="50dp"
                app:cardElevation="0dp"
                android:layout_gravity="center"
                app:cardCornerRadius="100dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_btn">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:text="Ignore"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="italic">

                    </TextView>

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ignore_ic"
                        android:background="@drawable/white_circulatr_back"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="2dp" />


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:id="@+id/ignore_btn"
                        android:layout_height="match_parent">

                    </FrameLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:drawableStart="@drawable/ic_bulb"
            android:gravity="center"
            android:visibility="gone"
            android:text="Mark the dustbin on map in your area and help him ðŸ’›\nLets clean India together ðŸ’›"
            android:textColor="@color/white"
            android:textSize="8dp"
            android:textStyle="italic" />







    </RelativeLayout>

</androidx.cardview.widget.CardView>